<%= form_with model: [ article, @comment ],class: "article-form", local: true do |form| %>
  <div>
    <%= form.label :commenter, "Author" %>
    <%= form.text_field :commenter, class: "input-field" %>
    <% @comment.errors.full_messages_for(:commenter).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, class: "input-field" %>
    <% @comment.errors.full_messages_for(:body).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Post Comment", class: "submit-button" %>
  </div>
<% end %>
